<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ApplicatKSU" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/azure</item>
        <!-- Темный вариант основного цвета бренда для статус бара -->
        <item name="colorPrimaryDark">@color/azure_dark</item>
        <!-- Акцентный цвет, используемый для элементов управления (кнопки, переключатели) -->
        <item name="colorAccent">@color/azure_accent</item>
    </style>

    <style name="Theme.ApplicatKSU" parent="Base.Theme.ApplicatKSU">
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:colorPrimaryDark">@color/azure</item>
        <item name="android:windowBackground">@color/Blue_Alice</item>
        <item name="colorPrimary">@color/azure</item>
        <!-- Темный вариант основного цвета бренда для статус бара -->
        <item name="colorPrimaryDark">@color/azure_dark</item>
        <!-- Акцентный цвет, используемый для элементов управления (кнопки, переключатели) -->
        <item name="colorAccent">@color/azure_accent</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@color/azure</item>
    </style>

    <style name="CalendarDateStyle" parent="android:Widget.CalendarView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/azure</item>
    </style>

    <style name="CustomCalendarMonth" parent="android:Widget.CalendarView">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>